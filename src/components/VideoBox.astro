---
import { Icon } from 'astro-icon';

type Props = {
  img: string;
  title: string;
  id: number;
};

const { img, title, id } = Astro.props;
---

<div class="video-box" id={`video-box-${id}`}>
  <img class="video-thumb" src={img} alt=`Thumbnail for ${title} Video` /><Icon
    pack="gg"
    class="video-icon"
    name="play-button-o"
  />
</div>

<script define:vars={{ id }}>
  const videoBox = document.getElementById(`video-box-${id}`);

  videoBox.dataset.id = id;
</script>

<style>
  .video-box {
    width: 100%;
    position: relative;
    cursor: pointer;
  }

  .video-thumb {
    width: 100%;
    box-shadow: 2px 2px 12px -1px hsla(0, 0%, 0%, 0.774);
  }

  [astro-icon] {
    display: inline-block;
    height: 6rem;
    width: 6rem;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>
