---
import { Icon } from 'astro-icon';
---

<div>
  <h1>Day Tickets</h1>
  <a href="/" class="link"
    ><Icon pack="cil" name="arrow-left" />Back to EJANDTN Website</a
  >
</div>

<style lang="scss">
  @keyframes cursor-blink {
    0% {
      opacity: 0;
    }
  }

  h1 {
    font-family: lores-9-wide, sans-serif;
    font-size: 3.6rem;

    display: flex;
    align-items: center;

    &::after {
      content: '';
      width: 0.5rem;
      height: 3.2rem;
      background: var(--primary-color);
      display: inline-block;
      animation: cursor-blink 1.5s steps(2) infinite;
    }
  }

  a {
    margin-top: -1rem;
    display: flex !important;
    align-items: center;
    gap: 1rem;
  }

  [astro-icon] {
    height: 2rem;
    width: 2rem;
    color: var(--primary-color);
  }
</style>
