---
import { SITE_TITLE as title } from '../consts';
import { SITE_DESCRIPTION as description } from '../consts';

import Hero from '../features/Hero.astro';
import Subscribe from '../components/Subscribe.astro';
import Tour from '../components/Tour.astro';
import Music from '../features/Music.astro';
import Video from '../features/Video.astro';
import About from '../features/About.astro';
import Links from '../features/Links.astro';
import Footer from '../features/Footer.astro';
import StickyNav from '../components/StickyNav.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="stylesheet" href="https://use.typekit.net/jmg5pxd.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <Hero />

      <StickyNav />

      <Subscribe />

      <Tour />

      <Music />

      <Video />

      <About />

      <Links />

      <Footer />
    </div>
  </body>
</html>

<script>
  const stickyNav = document.querySelector('.sticky-nav');
  const stickyNavHeight = (document.querySelector('.sticky-nav') as HTMLElement)
    .offsetHeight;

  function scrollToElement(e) {
    e.preventDefault();

    const href = this.getAttribute('href');

    if (href === '#') {
      window.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
      return;
    }

    const element = document.querySelector(href);

    const elementPosition = element.getBoundingClientRect().top;

    const scrollTo = elementPosition + window.pageYOffset - stickyNavHeight;

    if (href !== '#' && href.startsWith('#')) {
      window.scrollTo({
        top: scrollTo,
        behavior: 'smooth',
      });
    }

    if (stickyNav.classList.contains('nav-open')) {
      stickyNav.classList.toggle('nav-open');
    }
  }
</script>

<style is:global>
  :root {
    --primary-color: #6e95ce;

    --grey-color: #f0f2e66b;

    --light-color: #f0f2e6;
    --dark-color: #090d16;

    --border: 0.2rem solid var(--light-color);
  }

  *,
  *::after,
  *::before {
    padding: 0;
    margin: 0;
    box-sizing: inherit;
  }

  *:focus {
    outline: none;
    box-shadow: 0 0 0 0.4rem var(--primary-color);
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: var(--light-color);

    font-size: 62.5%;
    box-sizing: border-box;

    overflow-x: hidden;
  }

  body {
    font-family: 'Roboto', sans-serif;
    font-size: 1.6rem;
    color: var(--light-color);
  }

  h1 {
    font-family: 'rockwell', sans-serif;
    font-size: 3.6rem;
  }

  h2 {
    font-family: 'rockwell', sans-serif;
    font-size: 2.8rem;
  }

  h3 {
    font-family: 'rockwell', sans-serif;
    font-size: 2rem;
  }

  p {
    font-size: 1.2rem;
  }

  .container {
    margin: 0 auto;
    height: 100%;
  }

  /*
	****************************************
	LINKS
	****************************************
	*/

  .link:link,
  .link:visited {
    display: inline-block;
    text-decoration: none;
    color: inherit;

    transition: all 0.3s;
  }

  .link:hover,
  .link:active {
    text-decoration: none;
    color: var(--primary-color);
    transform: scale(1.05);
  }

  /*
	****************************************
	DEFAULT STYLES
	****************************************
	*/

  .section-seperator::after {
    content: '';
    width: 90%;
    position: absolute;
    bottom: 0;
    border-bottom: 0.1rem solid rgba(240, 242, 230, 0.603);
  }

  .grid--2-cols {
    display: grid;
    gap: 3.6rem;
    grid-template-columns: 1fr 1fr;
  }

  .grid--3-cols {
    display: grid;
    gap: 3.6rem;
    grid-template-columns: 1fr 1fr 1fr;
  }

  /*
	****************************************
	BUTTONS
	****************************************
	*/

  .btn,
  .btn:link,
  .btn:active {
    font-family: inherit;
    font-size: 2rem;
    padding: 1.2rem;
    border: none;
    background-color: transparent;
    color: var(--light-color);
    border-bottom: 0.2rem solid var(--light-color);
    cursor: pointer;

    position: relative;

    transition: all 0.3s;
  }

  .btn:hover,
  .btn:visited {
    transform: scale(1.05);
  }

  .nodisplay {
    display: none;
  }

  .nooverflow {
    overflow: hidden !important;
  }

  .opacity {
    opacity: 1;
    pointer-events: auto;
  }
</style>
