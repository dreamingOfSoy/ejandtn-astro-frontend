---
import { SITE_TITLE as title } from '../consts';
import { SITE_DESCRIPTION as description } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="stylesheet" href="https://use.typekit.net/jmg5pxd.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <h1>EJANDTN</h1>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --primary-color: #6e95ce;

    --light-color: #f0f2e6;
    --dark-color: #090d16;
  }

  *,
  *::after,
  *::before {
    padding: 0;
    margin: 0;
    box-sizing: inherit;
  }

  *:focus {
    outline: none;
    box-shadow: 0 0 0 0.4rem #6e94ce;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;

    font-size: 62.5%;
    box-sizing: border-box;

    overflow-x: hidden;
  }

  body {
    font-family: 'Roboto', sans-serif;
    font-size: 1.6rem;
  }

  h1 {
    font-family: 'rockwell', sans-serif;
    font-size: 3.6rem;
  }

  h2 {
    font-family: 'rockwell', sans-serif;
    font-size: 2.8rem;
  }

  h3 {
    font-family: 'rockwell', sans-serif;
    font-size: 2rem;
  }

  p {
    font-size: 1.2rem;
  }
</style>
